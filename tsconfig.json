{
  "compilerOptions": {
    "target": "ES6",               // Adjust based on your Node.js version
    "module": "CommonJS",             // Use CommonJS modules for Node.js
    "rootDir": ".",                   // Root directory of your source files
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "tests/**/*"],  // Include both source and test files
  "exclude": ["node_modules"]
}
